shopping_list = []

user_choice = input("Would you like to create a list?: ")

if user_choice == "yes":
    user_items = int(input("How many items will be in your list?: "))
for i in range(user_items):
    user_ingredient = input("What is the ingredient?: ")
    shopping_list.append(user_ingredient)
    print (shopping_list)
shopping_list.sort()

    


#Makes the class for the ingredients
class Butter:
    def __init__(ingredient, name, calories, total_fat, cholesterol, sodium, total_carbohydrate, protein):
        #variables for each part of the nutrition facts
        ingredient.name = "Butter"
        ingredient.calories = 102
        ingredient.total_fat = 11.5
        ingredient.cholesterol = 0
        ingredient.sodium = 2
        ingredient.total_carbohydrate = 0
        ingredient.protein = 0
#Each ingredients that are available         
def __str__(Butter):
    return ingredient.name + "has" + str(ingredient.calories) + str(ingredient.total_fat) + str(ingredient.cholesterol) + str(ingredient.sodium) + str(ingredient.total_carbohydrate) + str(ingredient.protein)

print (Butter)
